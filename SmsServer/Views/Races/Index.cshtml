@model IEnumerable<SmsServer.Models.Race>

@{
    ViewBag.Title = "Dine løb";
    var answers = (Dictionary<int, int>)@ViewBag.TotalAnswers;
}

<h2>Dine løb</h2>

<p>
    @Html.ActionLink("Opret nyt", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Løbsnavn
        </th>
        <th>
            Start tidspunkt
        </th>
        <th>
            Slut tidspunkt
        </th>
        <th>
            Kontakt navn
        </th>
        <th>
            Kontakt nummer
        </th>
        <th>
            Antal besvarelser
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Start)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.End)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contact)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactNumber)
        </td>
        <td>
            @(answers.ContainsKey(item.Id) ? answers[item.Id] : 0)
        </td>
        <td>
            @Html.ActionLink("Rediger", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detajler", "Details", new { id=item.Id }) |
            @Html.ActionLink("Opret post", "CreatePost", new { id = item.Id }) |
            @Html.ActionLink("Se poster", "ListPosts", new { id = item.Id }) |
            @Html.ActionLink("Print poster", "ShowPosts", new { id = item.Id }) |
            @Html.ActionLink("Slet", "Delete", new { id=item.Id }) | 
            @Html.ActionLink("Download svar som CSV", "GetAllAnswersForRace", new { id=item.Id}) |
            @Html.ActionLink("Se point for hold", "GetPointResultForRace", new { id = item.Id }) |
            @Html.ActionLink("Download point status som CSV", "DownloadPointsAsCSV", new { id = item.Id }) | 
            @Html.ActionLink("Tilføj hold", "AdminCreate", "Teams", new { id = item.Id }, null) |
            @Html.ActionLink("Se hold", "ListTeamsForRace", "Teams", new { id = item.Id }, null) | 
            @Html.ActionLink("Se holdenes status", "GetTeamStatus", new { id = item.Id }, null)
            
        </td>
    </tr>
}

</table>
