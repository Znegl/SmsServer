
@{
    ViewBag.Title = "PlacePost";
}

<h2>PlacePost</h2>
<div class="row">
    <div class=".col-sm-8" id="mapid"></div>
    <div class=".col-sm-4" id="">
        <ol id="postlist">
        </ol>
    </div>
</div>

<div class="placePostInput">
