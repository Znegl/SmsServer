@model SmsServer.Models.PostAnswer

@{
    ViewBag.Title = "Slet svar";
}

<h2>Slet svar</h2>

<h3>Er du sikker på du vil slette dette svar?</h3>
<div>
    <h4>Svar mulighed</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Titel
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Tekst
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Text)
        </dd>
        @if (Model.Image != null)
        {
            <dt>Billede</dt>
            <dd>
                <img width="300" src="@Url.Action("GetImage", "PostAnswers", new { id=Model.Id})" />
            </dd>
        }

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Slet" class="btn btn-default" /> |
            @Html.ActionLink("Tilbage til svar oversigten", "Index")
        </div>
    }
</div>
