@model SmsServer.Models.PostAnswer

@{
    ViewBag.Title = "Rediger";
}

<h2>Rediger</h2>


@using (Html.BeginForm("Edit", "PostAnswers", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>PostAnswer</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(m => m.CorrectAnswer)
        @Html.HiddenFor(m => m.IsImageOnDisk)
        @Html.HiddenFor(m => m.ImageMimeType)

        <div class="form-group">
            <label class="control-label col-md-2">Titel</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tekst</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>
        @if (Model.Image != null || Model.IsImageOnDisk)
        {
            <div class="form-group">
                <label class="control-label col-md-2">Nuværende billede:</label>
                <div class="col-md-10">
                    <img src="@Url.Action("GetImage", "PostAnswers", new { id=Model.Id})" />
                    @Html.ActionLink("Fjern billedet fra posten", "RemoveImage", new { id = Model.Id }, new { @class = "btn btn-danger" })
                </div>
            </div>
        }

        <div class="form-group">
            <label class="control-label col-md-2">Evt. billede</label>
            <div class="col-md-10">
                <input type="file" name="Image" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Point ved valg af dette svar</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PointValue, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PointValue, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Post som er den næste ved valg af denne svar mulighed</label>
            <div class="col-md-10">
                @Html.DropDownList("nextpostid", (List<SelectListItem>)ViewBag.PostsToChoose)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Gem" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Tilbage til oversigten", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
